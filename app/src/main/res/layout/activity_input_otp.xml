<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputOTP"
    android:background="#F7F7F7">

    <LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:clickable="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/pengaturan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approval Payroll Umum"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:textAlignment="center"
        android:layout_marginStart="10dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_below="@id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutRoot">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:text="Masukkan OTP yang telah kami kirimkan ke email t************@@corporate.co.id"
            android:textAlignment="center"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextOne"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextTwo"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextThree"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextFour"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextFive"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextSix"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>
    </LinearLayout>

</FrameLayout>

</RelativeLayout>