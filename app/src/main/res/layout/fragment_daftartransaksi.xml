<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context=".fragment.FragmentDaftarTransaksi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Data Payroll Umum"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"

            android:hint="Kata Kunci"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textColorHint="#AFAFAF"/>

        <GridLayout
            android:id="@+id/grid_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_marginTop="10dp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="1">

            <Button
                android:id="@+id/btnCari"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:backgroundTint="#00AD43"
                android:enabled="true"
                android:text="Cari" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:backgroundTint="#AFAFAF"
                android:enabled="true"
                android:text="Reset" />
        </GridLayout>




    </RelativeLayout>







        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_filter">

      <RelativeLayout
          android:layout_width="match_parent"
