<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:clickable="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/money" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payroll Umum"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginEnd="50dp" />


            </LinearLayout>
        </FrameLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Buat Baru"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#07334E" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Daftar Transaksi"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#07334E" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Transaksi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#07334E"
            android:layout_marginTop="40dp"/>

        <Spinner
            android:id="@+id/spinner_jenis_trx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Rekening Pengirim"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#07334E"/>

        <Spinner
            android:id="@+id/spinner_norek_pengirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#07334E"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cari File"
            android:background="@color/box_biru"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#07334E"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Keterangan"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pembayaran Gaji"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#07334E"/>

        <RadioGroup
            android:id="@+id/rgTglpembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Sekarang"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Terjadwal"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </RadioGroup>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:backgroundTint="@color/box_biru"
                android:background="@drawable/tombol"
                android:enabled="true"
                android:text="Cancel"/>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:backgroundTint="@color/box_biru"
                android:background="@drawable/tombol"
                android:enabled="true"
                android:text="Upload"/>
        </GridLayout>


    </LinearLayout>

</LinearLayout>