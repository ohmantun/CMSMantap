<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:clickable="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/pengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifikasi"
            android:layout_marginTop="7dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#231F20"
            android:textAlignment="center"
            android:layout_marginStart="10dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/ic_rectangle_notif">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan Payroll Umum"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="3dp"
                    app:drawableRightCompat="@drawable/ic_ellipse_red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BonusDinas.CSV"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="05/08/2022        12:00"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <io.github.glailton.expandabletextview.ExpandableTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textAlignment="textStart"
                    app:collapsedLines="1"
                    app:animDuration="500"
                    app:readMoreText="Read more"
                    app:textMode="line"
                    app:isExpanded="false"
                    android:text="@string/reject_note_notif"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ditolak"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:gravity="end"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <ImageView
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_line_notif"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/ic_rectangle_notif">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan Payroll Umum"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="3dp"
                    app:drawableRightCompat="@drawable/ic_ellipse_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GajiSeptember.CSV"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20/09/2022        16:00"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Menunggu Persetujuan"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:gravity="end"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <ImageView
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_line_notif"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/ic_rectangle_notif">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan Payroll Umum"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="3dp"
                    app:drawableRightCompat="@drawable/ic_ellipse_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GajiAgustus.CSV"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02/08/2022        10:00"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disetujui"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:gravity="end"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <ImageView
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_line_notif"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan Payroll Umum"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="3dp"
                    app:drawableRightCompat="@drawable/ic_ellipse_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GajiJuli.CSV"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="28/07/2022        14:00"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disetujui"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#083358"
                    android:gravity="end"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp" />

                <ImageView
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_line_notif"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    </ScrollView>









    <FrameLayout
        android:id="@+id/frameLay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/footer_payroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:orientation="vertical"
            android:background="@drawable/box2">

            <ImageButton
                android:id="@+id/footer_beranda"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/footer_beranda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:contextClickable="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/footer_pengaturan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/footer_pengaturan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:contextClickable="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/footer_keluar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_marginStart="315dp"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/footer_keluar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:contextClickable="true">
            </ImageButton>

        </GridLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>