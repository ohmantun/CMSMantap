<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_detaildatapayrollumum"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#EFEBEB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">


            <TextView
                android:id="@+id/tv_tglTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Transaksi   :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/tv_rekSumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rekening Sumber    :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/tv_rekPenerima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rekening Penerima :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/tv_nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nominal                      :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="7dp"/>

            <TextView
                android:id="@+id/tv_detailKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan                :"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="7dp"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>