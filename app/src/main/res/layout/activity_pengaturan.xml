<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".Pengaturan">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ic_h_kuning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/logogariskuning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:clickable="true"/>

            <TextView
                android:id="@+id/pengaturan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan"
                android:layout_marginTop="7dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_marginStart="10dp" />
            <ImageView
                android:layout_width="73dp"
                android:layout_height="53dp"
                android:src="@drawable/logo2"
                android:layout_marginStart="150dp"/>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">
    <ImageView
        android:id="@+id/idProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/profilpic" />

        <TextView
            android:id="@+id/idUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idProfile"
            android:layout_centerInParent="true"
            android:text="Nama User"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/idNorek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idUser"
            android:layout_centerInParent="true"
            android:text="0123456789"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/idRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idNorek"
            android:layout_centerInParent="true"
            android:text="MAKER007"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGantiSandi"
            android:layout_width="330dp"
            android:layout_height="66dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="#E8E8E8"
            app:cardCornerRadius="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/idRole">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/gantisandi"
                android:layout_marginStart="25dp"
                android:layout_gravity="center_vertical">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ganti Kata Sandi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#083358"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp">
            </TextView>
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:src="@drawable/arrowkanan"
                android:layout_marginEnd="25dp"
                android:layout_gravity="center|end">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnKeluar"
            android:layout_width="330dp"
            android:layout_height="66dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#E8E8E8"
            app:cardCornerRadius="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/btnGantiSandi">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="39dp"
                android:src="@drawable/keluaricon"
                android:layout_marginStart="25dp"
                android:layout_gravity="center_vertical">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#083358"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp">
            </TextView>
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:src="@drawable/arrowkanan"
                android:layout_marginEnd="25dp"
                android:layout_gravity="center|end">
            </ImageView>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/footer_payroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:orientation="vertical"
            android:background="@drawable/box2">

            <ImageButton
                android:id="@+id/footer_beranda"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/footer_beranda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:contextClickable="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/footer_pengaturan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/footer_pengaturan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:contextClickable="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/footer_keluar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_marginStart="315dp"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/footer_keluar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:contextClickable="true">
            </ImageButton>

        </GridLayout>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>