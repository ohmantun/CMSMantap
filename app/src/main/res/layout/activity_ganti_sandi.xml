<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0"
                android:text="Ganti Kata Sandi"
                android:layout_gravity="center_vertical"
                android:textColor="#231F20"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:text="ID Pengguna"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#083358"/>

        <TextView
            android:id="@+id/idpengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:hint="189600123"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Kata Sandi Lama"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#083358"/>

        <EditText
            android:id="@+id/current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:hint="Masukkan Kata Sandi Lama"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Kata Sandi Baru"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#083358"/>

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:hint="Masukkan Kata Sandi Baru"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Ulangi Kata Sandi"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#083358"/>

        <EditText
            android:id="@+id/ulangi_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="20dp"
            android:hint="Ulangi Kata Sandi"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:columnCount="2"
            android:rowCount="1">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:backgroundTint="@color/box_biru"
                android:background="@drawable/tombol"
                android:enabled="true"
                android:text="Cancel"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:backgroundTint="@color/box_biru"
                android:background="@drawable/tombol"
                android:enabled="true"
                android:text="Save"/>
        </GridLayout>
        
    </LinearLayout>

</RelativeLayout>